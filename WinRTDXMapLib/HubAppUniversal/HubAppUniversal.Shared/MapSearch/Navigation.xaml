<Page
    x:Class="HubAppUniversal.MapSearch.Navigation"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    xmlns:maps="using:Com.AMap.Api.Maps"
    mc:Ignorable="d"
    Background="{ThemeResource ApplicationPageBackgroundThemeBrush}">
    <Grid >

        <Grid.RowDefinitions>
            <RowDefinition Height="auto"></RowDefinition>
            <RowDefinition Height="5*"></RowDefinition>
        </Grid.RowDefinitions>

        <Grid Grid.Row="0">
            <StackPanel>
                <StackPanel Orientation="Vertical" HorizontalAlignment="Center"   >
                    <Button Content="步行导航" Click="Walk_OnClick"></Button>
                    <Button Content="车行导航" Click="Car_OnClick"></Button>
                    <Button Content="公交导航" Click="Bus_OnClick"></Button>
                </StackPanel>
            </StackPanel>
        </Grid>

        <Grid Grid.Row="1" x:Name="ContentGrid"></Grid>

    </Grid>
</Page>
